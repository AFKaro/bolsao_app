<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sobre">

    <Button
        android:id="@+id/github"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:baselineAligned="false"
        android:onClick="goGithub"
        android:text="Github"
        app:icon="@drawable/ic_baseline_code_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sobreTexto"
        app:layout_constraintVertical_bias="0.215" />

    <Button
        android:id="@+id/referencias"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:baselineAligned="false"
        android:onClick="goReferencias"
        android:text="Referência"
        app:icon="@drawable/ic_baseline_menu_book_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sobreTexto"
        app:layout_constraintVertical_bias="0.537" />

    <TextView
        android:id="@+id/sobreTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autoText="false"
        android:fontFamily="cursive"
        android:text="Aplicativo que conta histórias sobre o mundo da Terra Média de J. R. R. Tolkien"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sobreimagem" />

    <ImageView
        android:id="@+id/sobreimagem"
        android:layout_width="wrap_content"
        android:layout_height="380dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sobre_imagem" />

</androidx.constraintlayout.widget.ConstraintLayout>